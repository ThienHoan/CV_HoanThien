    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/script.js"></script>
    
    <script>
        // Matrix Rain Effect (same as index page)
        const canvas = document.getElementById('matrix');
        const ctx = canvas.getContext('2d');
        
        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;
        
        const matrix = "ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789@#$%^&*()*&^%+-/~{[|`]}";
        const matrixArray = matrix.split("");
        const fontSize = 10;
        const columns = canvas.width / fontSize;
        const drops = [];
        
        for (let x = 0; x < columns; x++) {
            drops[x] = 1;
        }
        
        function draw() {
            ctx.fillStyle = 'rgba(0, 0, 0, 0.04)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            ctx.fillStyle = '#00ff41';
            ctx.font = fontSize + 'px monospace';
            
            for (let i = 0; i < drops.length; i++) {
                const text = matrixArray[Math.floor(Math.random() * matrixArray.length)];
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);
                
                if (drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                drops[i]++;
            }
        }
        
        setInterval(draw, 35);
        
        // Typing Effect
        const texts = ['./initialize_contact.sh', 'ping secure_server', 'netstat -encryption', 'whoami', 'echo "Ready to receive"'];
        let textIndex = 0;
        let charIndex = 0;
        const typingElement = document.getElementById('typing-text');
        
        function typeText() {
            if (charIndex < texts[textIndex].length) {
                typingElement.textContent = texts[textIndex].substring(0, charIndex + 1);
                charIndex++;
                setTimeout(typeText, 100);
            } else {
                setTimeout(() => {
                    charIndex = 0;
                    textIndex = (textIndex + 1) % texts.length;
                    typeText();
                }, 2000);
            }
        }
        
        typeText();
        
        // Character counter
        const contentTextarea = document.getElementById('content');
        const charCounter = document.getElementById('charCounter');
        const maxChars = 500;
        
        contentTextarea.addEventListener('input', function() {
            const charCount = this.value.length;
            charCounter.textContent = `${charCount}/${maxChars} characters`;
            
            if (charCount > maxChars) {
                this.value = this.value.substring(0, maxChars);
                charCounter.textContent = `${maxChars}/${maxChars} characters`;
                charCounter.style.color = '#ff4444';
            } else if (charCount > maxChars * 0.8) {
                charCounter.style.color = '#ffaa00';
            } else {
                charCounter.style.color = '#00ccff';
            }
        });
        
        // Form encryption animation
        const form = document.getElementById('contactForm');
        form.addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            submitBtn.innerHTML = '<i class="fas fa-lock"></i> ENCRYPTING...';
            submitBtn.disabled = true;
            
            // Re-enable button after form processing
            setTimeout(() => {
                submitBtn.innerHTML = '<i class="fas fa-paper-plane"></i> TRANSMIT MESSAGE';
                submitBtn.disabled = false;
            }, 3000);
        });
        
        // Add glitch effect on form focus
        const inputs = document.querySelectorAll('.form-control');
        inputs.forEach(input => {
            input.addEventListener('focus', function() {
                this.style.boxShadow = '0 0 20px rgba(0, 255, 65, 0.5)';
            });
            
            input.addEventListener('blur', function() {
                this.style.boxShadow = 'none';
            });
        });
    </script>
</body>
</html>
